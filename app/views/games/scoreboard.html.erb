<div class="scores">
<h2 class='win'>
  Games Won: <%= @user.number_of_games_won %>
</h2>

<h2 class='lose'>
  Games Lost: <%= @user.number_of_games_lost %>
</h2>

<h2 class='draw'>
  Games Tied: <%= @user.number_of_games_tied %>
</h2>
</div>

<table>
  <tr>
  <th>NAME</th>
  <th>WINS</th>
  <th>LOSSES</th>
  <th>TIES</th>
</tr>

<% @users.each do |user| %>
  <tr class = '<%= 'highlight' if user == current_user %>'>
    <td><%= link_to user.name, user %></td>
    <td class='win'><%= user.number_of_games_won %></td>
    <td class='lose'><%= user.number_of_games_lost %></td>
    <td class='draw'><%= user.number_of_games_tied %></td>
  </tr>
  
<% end %>
</table>
<%= paginate @users %>