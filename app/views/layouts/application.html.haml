!!! 5
%html
  %head
    %title Moku
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    .container
      = render 'header'
      = render 'nav'

      .flash
        - flash.each do |name, msg|
          .flash-message{class: "flash-message-#{name}"}
            = msg

      = yield